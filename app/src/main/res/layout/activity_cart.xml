<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.cdbbbsp.www.Activity.Main.CartActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:background="@android:color/black">
        <com.cdbbbsp.www.CustomView.LinearGradientView
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="48dp"
    >
        <com.cdbbbsp.www.CustomView.LinearGradientView
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:layout_centerInParent="true"
                  android:text="我的订单"
                  android:textColor="@android:color/white"
                  android:textSize="18dp"/>

        <ImageView
            android:id="@+id/activity_cart_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="12dp"
            android:src="@drawable/ic_nav_arrow_left"/>

        <TextView
            android:id="@+id/actvity_cart_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="17dp"
            android:text="下一步"
            android:textColor="@android:color/white"
            android:textSize="16dp"/>

    </RelativeLayout>

    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:id="@+id/activity_cart_xRecyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
